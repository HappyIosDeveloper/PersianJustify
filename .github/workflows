name: CI
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
jobs:
  build-and-test:
    runs-on: macos-latest
    steps:
    - name: Xcode Setup
      uses: maxim-lobanov/setup-xcode@v1
      with:
        xcode-version: '15.3'
    - uses: actions/checkout@v2
    - name: Build and test
    run: xcodebuild clean build test -workspace PersianJustify/Example/perian_justify_example.xcodeproj -scheme
